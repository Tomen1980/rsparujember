<%- include("../template/admin/header.ejs")  %> 

<%- include("../template/admin/navbar.ejs")  %> 

        <!-- Content -->
        <div class="content">
            <!-- Animated -->
            <div class="animated fadeIn">
                <!-- Widgets  -->
                <div class="row">
                    <div class="col-lg-3 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="stat-widget-five">
                                    <div class="stat-icon dib flat-color-1">
                                        <i class="pe-7s-cash"></i>
                                    </div>
                                    <div class="stat-content">
                                        <div class="text-left dib">
                                            <% if (indikator.length>0) { %>
                                                <% for(let i of indikator){ %> 
                                                    <div class="stat-text"><span class="count"><%= i.bor %>%</span></div>
                                                    <% } %> 
                                                <% } %>
                                                    <div class="stat-heading">BOR(Bed Occupancy Ratio)</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="stat-widget-five">
                                    <div class="stat-icon dib flat-color-2">
                                        <i class="pe-7s-cart"></i>
                                    </div>
                                    <div class="stat-content">
                                        <div class="text-left dib">
                                            <% if (indikator.length>0) { %>
                                                <% for(let i of indikator){ %> 
                                                    <div class="stat-text"><span class="count"><%= i.avlos %> Hari</span></div>
                                                    <% } %> 
                                                <% } %>
                                            <div class="stat-heading">ALOS(Average Length of Stay)</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="stat-widget-five">
                                    <div class="stat-icon dib flat-color-3">
                                        <i class="pe-7s-browser"></i>
                                    </div>
                                    <div class="stat-content">
                                        <div class="text-left dib">
                                            <% if (indikator.length>0) { %>
                                                <% for(let i of indikator){ %> 
                                                    <div class="stat-text"><span class="count"><%= i.toi %></span></div>
                                                    <% } %> 
                                                <% } %>
                                            <div class="stat-heading">TOI(Turn Over Internal)</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="stat-widget-five">
                                    <div class="stat-icon dib flat-color-4">
                                        <i class="pe-7s-users"></i>
                                    </div>
                                    <div class="stat-content">
                                        <div class="text-left dib">
                                            <% if (indikator.length>0) { %>
                                                <% for(let i of indikator){ %> 
                                                    <div class="stat-text"><span class="count"><%= i.bto %></span></div>
                                                    <% } %> 
                                                <% } %>
                                            <div class="stat-heading">BTO(Bed Turn Over)</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="stat-widget-five">
                                    <div class="stat-icon dib flat-color-4">
                                        <i class="pe-7s-users"></i>
                                    </div>
                                    <div class="stat-content">
                                        <div class="text-left dib">
                                            <% if (indikator.length>0) { %>
                                                <% for(let i of indikator){ %> 
                                                    <div class="stat-text"><span class="count"><%= i.toi %> %</span></div>
                                                    <% } %> 
                                                <% } %>
                                            <div class="stat-heading">GDR(Gross Death Rate)</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="stat-widget-five">
                                    <div class="stat-icon dib flat-color-4">
                                        <i class="pe-7s-users"></i>
                                    </div>
                                    <div class="stat-content">
                                        <div class="text-left dib">
                                            <% if (indikator.length>0) { %>
                                                <% for(let i of indikator){ %> 
                                                    <div class="stat-text"><span class="count"><%= i.toi %> %</span></div>
                                                    <% } %> 
                                                <% } %>
                                            <div class="stat-heading">NDR(Net Death Rate)</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            
                </div>
                <!-- /Widgets -->
                <!--  Traffic  -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="box-title">Traffic </h4>
                            </div>
                            <div class="row">
                         
                                </div>
                                <div class="col-lg-4">
                                    <div class="card-body" style="margin-right: 500px;">
                                        <div class="progress-box progress-1">
                                            <h4 class="por-title">BOR(Bed occupancy Ratio)</h4>
                                            <!-- <div class="por-txt">Nilai 36%</div> -->
                                            <div class="progress mb-2" style="height: 25px;">
                                                <% if (indikator.length>0) { %>
                                                    <% for(let i of indikator){ %>
                                                        <div class="progress-bar bg-flat-color-1" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                                            <%= i.bor  %> %
                                                        </div>
                                                        <% } %> 
                                                    <% } %>
                                            </div>
                                        </div>
                                        <div class="progress-box progress-2">
                                            <h4 class="por-title">ALOS(Averege Length of Stay)</h4>
                                            <!-- <div class="por-txt">Nilai 41.5%</div> -->
                                            <div class="progress mb-2" style="height: 25px;">
                                                <% if (indikator.length>0) { %>
                                                    <% for(let i of indikator){ %>
                                                        <div class="progress-bar bg-flat-color-2" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                                            <%= i.avlos %> hari  
                                                        </div>
                                                        <% } %> 
                                                    <% } %>
                                            </div>
                                        </div>
                                        <div class="progress-box progress-2">
                                            <h4 class="por-title">TOI(Turn Over Internal)</h4>
                                            <!-- <div class="por-txt">Nilai (7.16%)</div> -->
                                            <div class="progress mb-2" style="height: 25px;">
                                                <% if (indikator.length>0) { %>
                                                    <% for(let i of indikator){ %>
                                                        <div class="progress-bar bg-flat-color-3" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                                            <%= i.toi %>  
                                                        </div>
                                                        <% } %> 
                                                    <% } %>
                                            </div>
                                        </div>
                                        <div class="progress-box progress-2">
                                            <h4 class="por-title">BTO(Bed Turn Over)</h4>
                                            <!-- <div class="por-txt">Nilai (2.68 %)</div> -->
                                            <div class="progress mb-2" style="height: 25px;">
                                                <% if (indikator.length>0) { %>
                                                    <% for(let i of indikator){ %>
                                                        <div class="progress-bar bg-flat-color-4" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                                            <%= i.bto %>
                                                        </div>
                                                        <% } %> 
                                                    <% } %>
                                            </div>
                                        <div class="progress-box progress-2">
                                            <h4 class="por-title">GDR(Gross Death Rate)</h4>
                                            <!-- <div class="por-txt">Nilai(19.90%)</div> -->
                                            <div class="progress mb-2" style="height: 25px;">
                                                <% if (indikator.length>0) { %>
                                                    <% for(let i of indikator){ %>
                                                        <div class="progress-bar bg-flat-color-3" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                                            <%= i.gdr %>%
                                                        </div>
                                                        <% } %> 
                                                    <% } %>
                                            </div>
                                        </div>
                                        <div class="progress-box progress-2">
                                            <h4 class="por-title">NDR(Net Death Rate)</h4>
                                            <!-- <div class="por-txt">Nilai (0.0%)</div> -->
                                            <div class="progress mb-2" style="height: 25px;">
                                                <% if (indikator.length>0) { %>
                                                    <% for(let i of indikator){ %>
                                                        <div class="progress-bar bg-flat-color-2" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                                            <%= i.ndr %>% 
                                                        </div>
                                                        <% } %> 
                                                    <% } %>
                                            </div>
                                        </div>
                                    </div> <!-- /.card-body -->
                                </div>
                            </div> <!-- /.row -->
                        </div>
                    </div><!-- /# column -->
                </div>
                <!--  /Traffic -->
                <div class="row">
                    <div class="card">
                        <div>
                            <h4>Data Kritik Saran</h4>
                        </div>
                    <div class="col-lg-15">
                        <div class="card-body">
                            <div class="table-stats order-table ov-h">
                                <table class="table ">
                                    <thead>
                                        <tr>
                                            <th class="avatar">email</th>
                                            <th>Name</th>
                                            <th>telepon</th>
                                            <th>Isi</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <% if(krisan.length > 0){%>
                                              <% for(let kri of krisan){%>
                                                <td> <%= kri.email %>  </td>
                                                <td><%= kri.nama %></td>
                                                <td><%= kri.tlpn %></td>
                                                <td><%= kri.isi %></td>
                                                <td>
                                                    <form action="/hapus-krisan" method="post">
                                                        <input type="hidden" name="id" value="<%= kri.id %>">
                                                        <button class="btn btn-danger">
                                                           Hapus
                                                        </button>
                                                    </form>
                                                </td>
                                            <% } %> 
                                            <% } %> 
                                        </tr>
                                    </tbody>
                                </table>
                            </div> 
                        </div>
                        </div>
                    <!-- Orders -->
                </div>
                </div>
            <!-- .animated -->
        </div>
        <!-- /.content -->
        <div class="clearfix"></div>
