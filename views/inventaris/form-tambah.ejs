            <div class="form-group"><label for="company" class=" form-control-label">Dahlia II</label><input type="number" id="company" value="<%= edit === true ? inventaris.dahlia2 : '' %>" name="dahlia2" placeholder="total Ruangan Dahlia II" class="form-control"></div>

            <div class="form-group"><label for="company" class=" form-control-label">Dahlia Isolasi</label><input type="number" value="<%= edit === true ? inventaris.dahliaI : '' %>" id="company" name="dahliaI" placeholder="total Ruangan Dahlia Isolasi" class="form-control"></div>

