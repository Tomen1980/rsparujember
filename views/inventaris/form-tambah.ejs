<%- include("../template/templateForm/head.ejs")  %> 

<%- include("../template/admin/navbar.ejs")  %> 

<div class="col-lg-6" style="margin-left: 250px;">
    <div class="card">
        <div class="card-header"><strong>Inventaris</strong><small><% if (edit) { %>
                                                                    Fungsi Edit
                                                                    <% }else{ %> 
                                                                        Fungsi Tambah 
                                                                    <%}%> </small>
          </div>
        <form action="/<%if(edit){%>edit-inventaris<%}else{%>tambah-inventaris<%}%>" method="post">
            <% if(edit){%>
                <input type="hidden" name="id" value="<%= inventaris.id %>">
            <%}%>
        <div class="card-body card-block">
            <div class="form-group"><label for="company" class=" form-control-label">VIP</label><input type="number" value="<%= edit === true ? inventaris.vip : '' %>" id="company" name="vip" placeholder="total Ruangan Vip" class="form-control"></div>

            <div class="form-group"><label for="company" class=" form-control-label">Anggrek</label><input type="number" value="<%= edit === true ? inventaris.anggrek : '' %>" id="company" name="anggrek" placeholder="total Ruangan Anggrek" class="form-control"></div>

            <div class="form-group"><label for="company" class=" form-control-label">HCU</label><input type="number" value="<%= edit === true ? inventaris.hcu : '' %>" id="company" name="hcu" placeholder="total Ruangan HCU" class="form-control"></div>

