            <div class="form-group"><label for="company" class=" form-control-label">Bougenvile III</label><input type="number" value="<%= edit === true ? inventaris.bougenvile3 : '' %>" id="company" name="bougenvile3" placeholder="total Ruangan bougenvile III" class="form-control"></div>

            <div class="form-group"><label for="company" class=" form-control-label">Lavender III</label><input type="number" value="<%= edit === true ? inventaris.lavender3 : '' %>" id="company" name="lavender3" placeholder="total Ruangan Lavender III" class="form-control"></div>
        </div>
        <button type="submit" class="btn btn-primary btn-sm" style="height: 50px ; width: 505px;">
            <i class="fa fa-dot-circle-o"></i> <%= edit === true ? 'Perbarui' : 'Tambah'  %>
        </button>
    </div>
</form>
</div>

