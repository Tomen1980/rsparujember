            <div class="form-group"><label for="company" class=" form-control-label">Mawar III</label><input type="number" value="<%= edit === true ? inventaris.mawar3 : '' %>" id="company" name="mawar3" placeholder="total Ruangan Mawar III" class="form-control"></div>

            <div class="form-group"><label for="company" class=" form-control-label">Mawar Isolasi</label><input type="number" value="<%= edit === true ? inventaris.mawarI : '' %>" id="company" name="mawarI" placeholder="total Ruangan Mawar Isolasi" class="form-control"></div>

            <div class="form-group"><label for="company" class=" form-control-label">Mawar Isolasi Khusus</label><input type="number" value="<%= edit === true ? inventaris.mawarIK : '' %>" id="company" name="mawarIK" placeholder="total Ruangan Mawar Isolasi Khusus" class="form-control"></div>

            <div class="form-group"><label for="company" class=" form-control-label">Melati III</label><input type="number" value="<%= edit === true ? inventaris.melati3 : '' %>" id="company" name="melati3" placeholder="total Ruangan Melati III" class="form-control"></div>

