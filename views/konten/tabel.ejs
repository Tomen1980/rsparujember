
<%- include("../template/templateTabel/head.ejs") %> 
<%- include("../template/admin/navbar.ejs") %> 

        <div class="breadcrumbs">
            <div class="breadcrumbs-inner">
                <div class="row m-0">
                    <div class="col-sm-4">
                        <div class="page-header float-left">
                            <div class="page-title">
                                <h1>Dashboard</h1>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="page-header float-right">
                            <div class="page-title">
                                <ol class="breadcrumb text-right">
                                    <li><a href="#">Dashboard</a></li>
                                    <li><a href="#">Table</a></li>
                                    <li class="active">Data Konten</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="content">
            <div class="animated fadeIn">
                <div class="row">

                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Data Konten</strong>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                       
                                        <tr>
                                            <th>Judul</th>
                                            <th>Foto</th>
                                            <th>Isi</th>
                                            <th>Per-Bulan</th>
                                            <th>Aksi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (konten.length > 0) { %>
                                            <% for( let con of konten) { %>

                                        <tr>
                                            <td><%= con.judul %> </td>
                                            <td>
                                                <img src="<%= con.image %>" height="100px" width="100px" alt="...">    
                                            </td>
                                            <td><%= con.isi %> </td>
                                            <td><%= con.createdAt %> </td>
                                            <td>
                                                <form action="/hapus-konten" method="post">
                                                    <input type="hidden" name="id" value="<%= con.id %> ">
                                                <button class="btn btn-danger btn-sm">
                                                        <i class="fa fa-dot-circle-o"></i> Hapus
                                                        </button>
                                                    </form> 
                                                        <a href="/edit-konten/<%= con.id %> " class="btn btn-warning btn-sm" >
                                                <i class="fa fa-dot-circle-o"></i> Edit
                                            </a></td>
                                        </tr>                         
                               <% } %>
                           <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- .animated -->
        </div><!-- .content -->


        <div class="clearfix"></div>

        <footer class="site-footer">
            <div class="footer-inner bg-white">
                <div class="row">
                    <div class="col-sm-6">
                        Copyright &copy; 2018 Ela Admin
                    </div>
                    <div class="col-sm-6 text-right">
                        Designed by <a href="https://colorlib.com">Colorlib</a>
                    </div>
                </div>
            </div>
        </footer>

    </div><!-- /#right-panel -->

