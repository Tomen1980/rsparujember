<%- include("../template/templateForm/head.ejs")  %> 

<%- include("../template/admin/navbar.ejs")  %> 

<div class="content">
    <div class="animated fadeIn">

<div class="col-lg-6">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">
                <% if (edit) { %>
                    Form Tambah
                <% }else{ %>
                    Form Edit
                <% } %> 
                </strong>
        </div>
        <div class="card-body">
            <!-- Credit Card -->
            <div id="pay-invoice">
                <div class="card-body">
                    <div class="card-title">
                        <h3 class="text-center">Indikator</h3>
                    </div>
                    <hr>
                    <form action="/<%if(edit){%>edit-indikator<%}else{%>tambah-indikator<%}%>" method="post">
                        <%if(edit){%>
                            <input type="hidden" name="id" value="<%= indikator.id %> ">
                        <%}%>
                            <div class="form-group"><label for="company" class=" form-control-label">BOR(Bed Occupancy Ratio)</label><input type="text" value="<%= edit === true ? indikator.bor : '' %>" id="company" name="bor" placeholder="" class="form-control"></div>

                            <div class="form-group"><label for="company" class=" form-control-label">AVLOS(Average Length of Stay)</label><input type="text" value="<%= edit === true ? indikator.avlos : '' %>" id="company" name="avlos" placeholder="" class="form-control"></div>

                            <div class="form-group"><label for="company" class=" form-control-label">TOI</label><input type="text" value="<%= edit === true ? indikator.toi : '' %>" id="company" name="toi" placeholder="" class="form-control"></div>

                            <div class="form-group"><label for="company" class=" form-control-label">BTO(Bed Turn Over)</label><input type="text" value="<%= edit === true ? indikator.bto : '' %>" id="company" name="bto" placeholder="" class="form-control"></div>

                            <div class="form-group"><label for="company" class=" form-control-label">GDR(Gross Death Rate)</label><input type="text" id="company" value="<%= edit === true ? indikator.gdr : '' %>" name="gdr" placeholder="" class="form-control"></div>

                            <div class="form-group"><label for="company" class=" form-control-label">NDR(Net Death Rate)</label><input type="text" value="<%= edit === true ? indikator.ndr : '' %>" id="company" name="ndr" placeholder="" class="form-control"></div>
                        <div>
                            <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                <i class="fa fa-lock fa-lg"></i>
                                <%= edit === true ? 'Perbarui' : 'Tambah'  %>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div> <!-- .card -->
</div><!--/.col-->

</div>
</div>



<%- include("../template/templateForm/footer.ejs")  %> 